---
interface Props {
  title?: string;
}
const { title = 'פאנל ניהול' } = Astro.props;
---
<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | פאנל ניהול</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="admin-body">
  <header class="site-header">
    <div class="container">
      <a href="/admin" class="logo">פאנל ניהול · בלוג משחקי מחשב</a>
      <nav class="main-nav">
        <a href="/">צפה באתר</a>
        <a href="/admin">דשבורד</a>
        <a href="/admin/pages">עמודים</a>
        <a href="/admin/posts">פוסטים</a>
        <a href="/admin/settings">הגדרות</a>
        <span id="admin-user"></span>
        <a href="/logout">התנתק</a>
      </nav>
    </div>
  </header>
  <main class="admin-main">
    <div class="container">
      <div id="admin-content"><p class="admin-loading">טוען...</p></div>
      <slot />
    </div>
  </main>
  <script>
    import '@/scripts/admin-auth.js';
  </script>
  <slot name="scripts" />
</body>
</html>
